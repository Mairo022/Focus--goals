<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefWidth="300.0" styleClass="timerDialog" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox alignment="TOP_CENTER" prefHeight="0.0" prefWidth="0.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="timerDialog__item">
               <children>
                  <Label styleClass="timerDialog__item__label" text="Title" />
                  <TextField fx:id="inputTitle" styleClass="timerDialog__item__input" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="timerDialog__item">
               <children>
                  <Label styleClass="timerDialog__item__label" text="Short Break (seconds)" />
                  <TextField fx:id="inputShortBreak" styleClass="timerDialog__item__input" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="timerDialog__item">
               <children>
                  <Label styleClass="timerDialog__item__label" text="Long Break (seconds)" />
                  <TextField fx:id="inputLongBreak" styleClass="timerDialog__item__input" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="timerDialog__item">
               <children>
                  <Label styleClass="timerDialog__item__label" text="Focus Time (seconds)" />
                  <TextField fx:id="inputFocusTime" styleClass="timerDialog__item__input" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0" styleClass="timerDialog__item">
               <children>
                  <Label styleClass="timerDialog__item__label" text="Total cycles" />
                  <TextField fx:id="inputCycles" styleClass="timerDialog__item__input" />
               </children>
            </VBox>
         </children>
      </VBox>
   </content>
</DialogPane>
